= form_for @aspect do |f|
  -if @aspect.errors.any?
    #error_explanation
      %h2= "#{pluralize(@aspect.errors.count, "error")} prohibited this aspect from being saved:"
      %ul
        - @aspect.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :creator
    = f.text_field :creator
  .field
    = f.label :feedUrl
    = f.text_field :feedUrl
  .actions
    = f.submit 'Save'
