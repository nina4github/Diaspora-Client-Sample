= form_for @event do |f|
  -if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :activity_name
    = f.text_field :activity_name
  .field
    = f.label :counter
    = f.text_field :counter
  .field
    = f.label :timestamp
    = f.datetime_select :timestamp
  .actions
    = f.submit 'Save'
