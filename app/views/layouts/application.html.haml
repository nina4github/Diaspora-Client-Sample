    = javascript_include_tag :defaults

    = javascript_include_tag  "org/cometd"  
    = javascript_include_tag "org/cometd/AckExtension"
    = javascript_include_tag "org/cometd/ReloadExtension"
    = javascript_include_tag "org/cometd/TimeStampExtension"
    = javascript_include_tag "org/cometd/TimeSyncExtension"
    = javascript_include_tag "jquery/jquery.cometd"
    = javascript_include_tag "jquery/jquery.json-2.2"
    = javascript_include_tag "eventbus"
    = javascript_include_tag  "geniehub"
    -#    = javascript_include_tag  "geniehubG"  

   
    = csrf_meta_tag
    = yield(:head)

    .notice
      = notice

    .alert
      = alert


  %body
    #container
      -#- flash.each do |name, msg|
      -#  = content_tag :div, msg, :id => "flash_#{name}"

      -#- if show_title?
      %h1= yield(:title)

